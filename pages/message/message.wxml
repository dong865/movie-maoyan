
<!-- 头部 -->
<include src="../navback/navback.wxml" />
<view class='imgbg' style='background-image:url({{bg}});'></view>
<image class='cover' mode='scaleToFill' src='{{cover}}'></image> 
<view class='title'>{{title}}</view>
<!-- 留言部分 -->
<view class='content'>
  <form bindsubmit='to_message'>
    <input name='time' placeholder='输入字幕时间' maxlength='8'></input>
    <textarea name='marke' placeholder='填写留言'></textarea>
    <button form-type='submit'>提交</button>
  </form>
</view>